<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ie.wit.application.activities.DashboardActivity">

    <TextView
        android:id="@+id/userNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dashboardCurrentBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/userNameLabel"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:gravity="top|center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="gone"/>

    <Button
        android:id="@+id/toggleShowList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="127dp"
        android:text="@string/dashboardShowList"
        android:visibility="gone"
        android:onClick="toggleList"/>

    <ListView
        android:id="@+id/transactionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggleShowList"
        android:visibility="gone">

    </ListView>

    <TextView
        android:id="@+id/noDataFoundLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/userNameLabel"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:gravity="top|center"
        android:text="@string/noDataFoundText"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="gone"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toggleDataRadio"
        android:layout_marginTop="169dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/transactionList"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/showAllRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/showAllRadio"/>

        <RadioButton
            android:id="@+id/showExpenditureRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/showExpenditureRadio"/>

        <RadioButton
            android:id="@+id/showIncomeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/showIncomeRadio"/>
    </RadioGroup>


</RelativeLayout>
